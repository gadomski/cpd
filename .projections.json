{
    "include/cpd/*.hpp": {
        "alternate": "src/{}.cpp",
        "type": "include"
    },
    "src/*.hpp": {
        "alternate": "src/{}.cpp",
        "type": "header"
    },
    "src/*.cpp": {
        "alternate": ["include/cpd/{}.hpp", "src/{}.hpp"],
        "type": "source"
    },
    "test/*_test.cpp": {
        "alternate": ["src/{}.cpp", "src/{}.hpp", "include/cpd/{}.hpp"],
        "type": "test"
    }
}

